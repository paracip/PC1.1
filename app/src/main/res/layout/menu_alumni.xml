<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_menu_alumni"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1200dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/kalpanachwla"
                android:layout_marginTop="60dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="KALPANA CHAWLA (B.SC IN AEROSPACE ENGG.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/jaspalbhatti"
                android:id="@+id/imageView3"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/textView5"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2" />

            <TextView
                android:text="\nJASPAL BHATTI (B.E. ELECTRICAL ENGG.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/vanyamishra"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:id="@+id/imageView4" />

            <TextView
                android:text="\nVANYA MISHRA (B.E. ELECTRICAL ENGG.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Vanya Mishra is an Indian actress, model and beauty pageant titleholder who was crowned Femina Miss India World in 2012."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:id="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8"
                android:textColor="#fff" />

            <TextView
                android:text="Jaspal Singh Bhatti (3 March 1955 – 25 October 2012)\nwas an Indian television personality famous for his satirical take on the problems of the common man. He is well known for his television series Flop Show and mini capsules Ulta Pulta which ran on Doordarshan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:id="@+id/textView7"
                android:textColor="#fff"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Kalpana Chawla (March 17,1962–February 1, 2003)\nwas an Indo-American astronaut and the first woman of Indian origin in space.She first flew on Space Shuttle Columbia in 1997 as a mission specialist and primary robotic arm operator."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gaurav"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:id="@+id/imageView5" />

            <TextView
                android:text="\nGAURAV DHILLON (B.E CSE)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="#fff"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="A hardcore programmer and a technical enthusiast. He is currently heading SnapLogic\n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
