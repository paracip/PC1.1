<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_heli"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.gs.videoview.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pre Alpha Release"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#fcfcfc"
        android:textSize="18sp"
        android:fontFamily="monospace" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/final123"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView4" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        app:srcCompat="@drawable/logonamefinal"
        android:id="@+id/imageView5"
        android:layout_marginTop="165dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_gravity="center_horizontal|bottom">

        <EditText
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:id="@+id/username"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your ID"
            android:textColor="#ffd53b"
            android:textColorHint="#ffd53b"
            android:textStyle="normal|bold"
            android:textColorLink="#ffd53b"
            android:inputType="text"
            android:password="false"
            android:fontFamily="monospace" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your password"
            android:textColor="#ffd53b"
            android:textColorHint="#ffd53b"
            android:textStyle="normal|bold"
            android:textColorLink="#ffd53b"
            android:inputType="textWebPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="L o g i n"
            android:id="@+id/button123"
            android:layout_gravity="center_horizontal"
            android:onClick="loginbutton"
            android:background="#cfcfcf"
            android:textColor="#000"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-condensed" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>




</FrameLayout>
