<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#222a35"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_pecmarket"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/map"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/imageView"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:textColor="#ffd53b"
        android:textSize="17sp"
        android:layout_marginLeft="0dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="20dp"
        android:id="@+id/textView15"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text="PEC Dispensary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="0dp"
        android:textColor="#ffd53b"
        android:textSize="17sp"
        android:layout_alignEnd="@+id/textView16"
        android:layout_marginTop="22dp"
        android:id="@+id/textView17"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="+919041720071"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:textColorLink="#fff17a0a"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Pankaj Graphics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#ffd53b"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="01722753064"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textColorLink="#fff17a0a"
        android:autoLink="phone"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:text="+919417590685"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:autoLink="phone"
        android:textColorLink="#fff17a0a"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

</RelativeLayout>