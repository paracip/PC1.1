                android:autoLink="phone"
                android:textStyle="normal|bold"
                android:layout_weight="2.66"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
